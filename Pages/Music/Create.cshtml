@page
@model aspnetcoreapp.Pages_Music.CreateModel

@{
    ViewData["Title"] = "Agregar un nuevo producto";
}

<h1 class="display-6">@ViewData["Title"]</h1>

<h4>Producto</h4>
<hr />
<div class="row g-3">
    <div class="col-md-8 offset-md-2">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Music.Titulo" class="control-label"></label>
                <input asp-for="Music.Titulo" class="form-control" />
                <span asp-validation-for="Music.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Music.FechaEstreno" class="control-label"></label>
                <input asp-for="Music.FechaEstreno" class="form-control" />
                <span asp-validation-for="Music.FechaEstreno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Music.Genero" class="control-label"></label>
                <input asp-for="Music.Genero" class="form-control" />
                <span asp-validation-for="Music.Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Music.Precio" class="control-label"></label>
                <input asp-for="Music.Precio" class="form-control" />
                <span asp-validation-for="Music.Precio" class="text-danger"></span>
            </div>
            <div class="form-group d-flex my-3 justify-content-center">
                <a asp-page="Index" class="btn btn-danger me-md-auto">Volver a la lista <i class="bi bi-arrow-left-circle"></i></a>
                
                <button type="submit"  class="btn btn-primary">
                    Agregar producto <i class="bi bi-patch-plus"></i>
                </button>
                

            </div>
        </form>
    </div>
</div>
    
<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
