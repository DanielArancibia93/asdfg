@page
@model aspnetcoreapp.Pages_Music.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    
    <hr />
    <dl class="row">
            <div class="card" style="width: 18rem;">
    
        <div class="card-body">
            <h5 class="card-title">Music</h5>
            
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Music.Titulo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Music.Titulo)
                </dd>
            </li>
            <li class="list-group-item">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Music.FechaEstreno)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Music.FechaEstreno)
                </dd>
            </li>
            <li class="list-group-item">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Music.Genero)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Music.Genero)
                </dd>
            </li>
            <li class="list-group-item">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Music.Precio)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Music.Precio)
                </dd>
            </li>
        </ul>
        <div class="card-body">
            <a asp-page="./Edit" asp-route-id="@Model.Music?.Id" class="btn btn-success rounded-circle"><i class="bi bi-pen-fill"></i></a> |
            <a asp-page="./Index" class="btn btn-danger rounded-circle"><i class="bi bi-arrow-left-circle"></i></a>
        </div>
    </div>  
    </dl>
</div>

